<form class="navbar-form navbar-right"  action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">

    <div class="form-group">
        <input type="text" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="{{ 'security.navbar_login.username'|trans({}, 'UserBundle') }}">
    </div>

    <div class="form-group">
        <input type="password" name="_password" required="required" class="form-control" placeholder="{{ 'security.navbar_login.password'|trans({}, 'UserBundle') }}">
    </div>

    {# Do we actually need _remember_me checkbox here? #}

    <input type="submit" name="_submit" value="{{ 'security.navbar_login.submit'|trans({}, 'UserBundle') }}" class="btn btn-default">
</form>
