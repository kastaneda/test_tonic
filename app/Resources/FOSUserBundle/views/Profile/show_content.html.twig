
<div class="fos_user_user_show">

<div class="panel panel-default">
    <div class="panel-body">
        <dl class="dl-horizontal">
          <dt>{{ 'profile.show.username'|trans({}, 'FOSUserBundle') }}</dt>
          <dd>{{ user.username }}</dd>

          <dt>{{ 'profile.show.email'|trans({}, 'FOSUserBundle') }}</dt>
          <dd>{{ user.email }}</dd>

          <dt>First name:</dt>
          <dd>{{ user.nameFirst }}</dd>

          <dt>Last name:</dt>
          <dd>{{ user.nameLast }}</dd>

          <dt>Referral code:</dt>
          <dd>{{ user.refCode }}</dd>
        </dl>
    </div>
</div>

<ul>
    <li><a href="{{ path('fos_user_profile_edit') }}">/profile/edit</a></li>
    <li><a href="{{ path('fos_user_change_password') }}">/profile/change-password</a></li>
</ul>

</div>